<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <EditText
        android:id="@+id/nickname"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="닉네임 입력" />

    <Button
        android:id="@+id/checkNick"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/nickname"
        android:backgroundTint="#674D83"
        android:text="중복확인" />

    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/nickname"
        android:hint="이메일 입력" />

    <Button
        android:id="@+id/checkEmail"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/checkNick"
        android:layout_toRightOf="@id/email"
        android:backgroundTint="#674D83"
        android:text="중복확인" />

    <EditText
        android:id="@+id/emailNum"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:hint="인증코드 입력" />

    <Button
        android:id="@+id/checkEmailNum"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/checkEmail"
        android:layout_toRightOf="@id/emailNum"
        android:backgroundTint="#674D83"
        android:text="확인 " />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/emailNum"
        android:hint="비밀번호 입력" />

    <EditText
        android:id="@+id/againPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:hint="비밀번호 확인" />

    <Button
        android:id="@+id/checkPassword"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_toRightOf="@id/againPassword"
        android:backgroundTint="#674D83"
        android:text="확인 "/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/againPassword"
        android:hint="휴대전화번호 입력" />

    <Button
        android:id="@+id/check"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/phone"
        android:backgroundTint="#674D83"
        android:text="본인인증하기" />

    <View
        android:id="@+id/line1"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:layout_below="@id/check"
        android:background="#e5e5e5"/>

    <TextView
        android:id="@+id/device"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:gravity="center"
        android:text=" 기기 정보 저장하기"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/device_switch"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:layout_alignEnd="@+id/check"
        android:layout_marginEnd="7dp"
        android:textOff="No"
        android:textOn="Yes"/>

    <View
        android:id="@+id/line2"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:layout_below="@id/device_switch"
        android:background="#e5e5e5"/>

    <TextView
        android:id="@+id/device_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/device"
        android:gravity="center_vertical"
        android:hint="기기 정보"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <View
        android:id="@+id/line3"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:layout_below="@id/device_name"
        android:background="#e5e5e5"/>

    <Button
        android:id="@+id/join"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/device_name"
        android:backgroundTint="#674D83"
        android:text="가입 완료하기" />

</RelativeLayout>